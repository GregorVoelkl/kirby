{
    "name": "getkirby/cms",
    "description": "Kirby Cms",
    "keywords": ["kirby", "cms"],
    "homepage": "https://getkirby.com",
    "authors": [
        {
            "name": "Bastian Allgeier",
            "email": "bastian@getkirby.com",
            "homepage": "http://bastianallgeier.com"
        }
    ],
    "support": {
        "email": "support@getkirby.com",
        "issues": "https://github.com/getkirby/kirby/issues",
        "forum": "https://forum.getkirby.com",
        "source": "https://github.com/getkirby/kirby"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/k-next/data"
        },
        {
            "type": "vcs",
            "url": "https://github.com/k-next/filesystem"
        },
        {
            "type": "vcs",
            "url": "https://github.com/k-next/html"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "ext-mbstring": "*",
        "erusev/parsedown-extra": "0.7.*",
        "michelf/php-smartypants": "1.8.*",
        "claviska/simpleimage": "3.3.*",
        "getkirby/data": "dev-master",
        "getkirby/filesystem": "dev-master",
        "getkirby/html": "dev-master",
        "sentry/sentry": "^1.8"
    },
    "minimum-stability": "dev",
    "require-dev": {
        "phpunit/phpunit": "*"
    },
    "autoload": {
        "psr-4": {
            "Kirby\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kirby\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --stderr --coverage-html=tests/coverage"
    },
    "archive": {
        "exclude": [
            "/.gitignore",
            "/.travis.yml",
            "phpunit.xml",
            "/tests",
            "/vendor"
        ]
    }
}
