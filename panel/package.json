{
  "name": "kirby",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve --open",
    "build": "vue-cli-service build",
    "e2e": "vue-cli-service e2e",
    "e2e:open": "vue-cli-service e2e:open",
    "lint": "vue-cli-service lint",
    "precommit": "pretty-quick --staged"
  },
  "dependencies": {
    "autosize": "^4.0.1",
    "getkirby-ui": "github:k-next/ui#master",
    "luxon": "^1.0.0",
    "npm": "^6.0.0",
    "slugify": "^1.2.6",
    "ui": "github:k-next/ui#master",
    "vue": "^2.5.9",
    "vue-router": "^3.0.1",
    "vuedraggable": "^2.15.0",
    "vuex": "^3.0.1",
    "vuex-i18n": "^1.10.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-beta.6",
    "@vue/cli-plugin-e2e-cypress": "^3.0.0-beta.6",
    "@vue/cli-plugin-eslint": "^3.0.0-beta.6",
    "@vue/cli-service": "^3.0.0-beta.6",
    "babel-plugin-wildcard": "^4.0.0",
    "husky": "^0.14.3",
    "node-sass": "^4.8.3",
    "prettier": "1.12.0",
    "pretty-quick": "^1.4.1",
    "sass-loader": "^7.0.1",
    "vue-template-compiler": "^2.5.13"
  },
  "babel": {
    "presets": [
      "@vue/app"
    ],
    "plugins": [
      "wildcard"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:vue/recommended",
      "eslint:recommended"
    ],
    "rules": {
      "vue/require-default-prop": "off",
      "vue/attributes-order": "error",
      "vue/require-prop-types": "error",
      "vue/max-attributes-per-line": [
        "error",
        {
          "singleline": 3,
          "multiline": {
            "max": 1,
            "allowFirstLine": false
          }
        }
      ],
      "vue/html-closing-bracket-newline": [
        "error",
        {
          "singleline": "never",
          "multiline": "always"
        }
      ]
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
